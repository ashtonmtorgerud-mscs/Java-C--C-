<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.* ?>
<?import java.util.* ?>
<?import javafx.scene.* ?>
<?import javafx.scene.control.* ?>
<?import javafx.scene.layout.* ?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.InvoiceController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <GridPane layoutX="14.0" layoutY="14.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Select Invoice: " />
                <ComboBox fx:id="invoicesComboBox" prefHeight="25.0" prefWidth="281.0" onAction="#invoiceComboBoxItemSelected" GridPane.columnIndex="1" />
                <Label text="invoiceID: " GridPane.rowIndex="1"/>
                <TextField fx:id="InvoiceIdTextField" promptText="Invoice Id" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Status: " GridPane.rowIndex="2"/>
                <TextField fx:id="statusTextField" promptText="Status" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="invoiceDate: " GridPane.rowIndex="3"/>
                <TextField fx:id="invoiceDateTextField" promptText="Invoice date" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label text="DueDate: " GridPane.rowIndex="4"/>
                <TextField fx:id="dueDateTextField" promptText="Due Date" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
<!--                <Button fx:id="loadButtonTwo" mnemonicParsing="false" onAction="#loadButtonTwoClicked" text="Load" GridPane.columnIndex="0" GridPane.rowIndex="5"/>-->
<!--                <Button fx:id="loadButton" mnemonicParsing="false" onAction="#loadButtonClicked" text="Load" GridPane.columnIndex="1" GridPane.rowIndex="5"/>-->
                <Label text="Select LineItem: " GridPane.rowIndex="5"/>
                <ListView fx:id="lineItemsListView" onMouseClicked="#lineItemsListviewClicked" prefHeight="60.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <Label text="Amount: " GridPane.rowIndex="6"/>
                <Label text="Description: " GridPane.rowIndex="7"/>
                <TextField fx:id="lineItemDescriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <TextField fx:id="lineItemAmountTextField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                <Label text="Total: " GridPane.rowIndex="8"/>
                <TextField fx:id="totalAmountTextField" promptText="Total" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                <Button fx:id="deleteButton" text="Delete" onMouseClicked="#deleteButtonClicked" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
                <Button fx:id="saveEditsButton" text="Save" onMouseClicked="#saveEditsButtonClicked" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                <Button fx:id="addButton" text="Add" onMouseClicked="#AddButtonClicked" GridPane.columnIndex="2" GridPane.rowIndex="9"/>

            </children>
        </GridPane>
    </children>
</AnchorPane>
